{
    "layer": "top",
    "position": "top",
    "mode": "dock",
    // "height": 20, // removed for dynamic height (I don't see a difference)
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "reload_style_on_change": true,

// Positions
	"modules-left": [
        "custom/ws",            // window icon
        "custom/left1",

        "hyprland/workspaces",  // workspaces
        "custom/right1",

        //"custom/paddw",
        "hyprland/window"       // window title
